# Staging Environment Configuration
APP_NAME=Community Marketplace (Staging)
APP_ENV=staging
DEBUG=false

# API Configuration
BASE_API_URL=https://staging-api.communitymarketplace.com
WEBSOCKET_URL=wss://staging-ws.communitymarketplace.com
API_TIMEOUT=30000

# Firebase Configuration (Staging)
FIREBASE_PROJECT_ID=community-marketplace-staging
FIREBASE_API_KEY=your-staging-firebase-api-key
FIREBASE_AUTH_DOMAIN=community-marketplace-staging.firebaseapp.com
FIREBASE_DATABASE_URL=https://community-marketplace-staging-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=community-marketplace-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:staging-app-id

# Google Sign-In Configuration (Staging)
GOOGLE_WEB_CLIENT_ID=your-staging-google-web-client-id.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your-staging-google-ios-client-id.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-staging-google-android-client-id.googleusercontent.com

# Map Configuration
GOOGLE_MAPS_API_KEY=your-staging-google-maps-api-key

# Push Notifications
FCM_SERVER_KEY=your-staging-fcm-server-key
FCM_SENDER_ID=123456789

# Payment Configuration (Test Mode)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_staging_key
STRIPE_SECRET_KEY=sk_test_your_stripe_staging_secret

# Analytics
GOOGLE_ANALYTICS_ID=GA-STAGING-XXXXXXXXX

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_DARK_MODE=true
ENABLE_CACHING=true

# Performance Settings
MAX_IMAGE_SIZE=5242880
CACHE_EXPIRATION_HOURS=12
MAX_CACHE_SIZE=104857600
NETWORK_TIMEOUT=25
SHORT_TIMEOUT=8

# Location Settings (Riyadh, Saudi Arabia as default for staging)
MAX_SEARCH_RADIUS=50.0
DEFAULT_LATITUDE=24.7136
DEFAULT_LONGITUDE=46.6753

# Pagination
PRODUCT_LIST_PAGE_SIZE=20
CHAT_MESSAGE_LIMIT=100
