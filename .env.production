# Production Environment Configuration
APP_NAME=Community Marketplace
APP_ENV=production
DEBUG=false

# API Configuration
BASE_API_URL=https://api.communitymarketplace.com
WEBSOCKET_URL=wss://ws.communitymarketplace.com
API_TIMEOUT=25000

# Firebase Configuration (Production)
FIREBASE_PROJECT_ID=community-marketplace-prod
FIREBASE_API_KEY=your-production-firebase-api-key
FIREBASE_AUTH_DOMAIN=community-marketplace-prod.firebaseapp.com
FIREBASE_DATABASE_URL=https://community-marketplace-prod-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=community-marketplace-prod.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:production-app-id

# Google Sign-In Configuration (Production)
GOOGLE_WEB_CLIENT_ID=your-production-google-web-client-id.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your-production-google-ios-client-id.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-production-google-android-client-id.googleusercontent.com

# Map Configuration
GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key

# Push Notifications
FCM_SERVER_KEY=your-production-fcm-server-key
FCM_SENDER_ID=123456789

# Payment Configuration (Live Mode)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_key
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret

# Analytics
GOOGLE_ANALYTICS_ID=GA-PROD-XXXXXXXXX

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_DARK_MODE=true
ENABLE_CACHING=true

# Performance Settings
MAX_IMAGE_SIZE=5242880
CACHE_EXPIRATION_HOURS=6
MAX_CACHE_SIZE=52428800
NETWORK_TIMEOUT=20
SHORT_TIMEOUT=5

# Location Settings (Multiple regions supported)
MAX_SEARCH_RADIUS=50.0
DEFAULT_LATITUDE=24.7136
DEFAULT_LONGITUDE=46.6753

# Pagination
PRODUCT_LIST_PAGE_SIZE=20
CHAT_MESSAGE_LIMIT=100
