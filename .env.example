# Community Marketplace Environment Configuration
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values for each environment

# App Configuration
APP_NAME=Community Marketplace
APP_ENV=development
DEBUG=true

# API Configuration
BASE_API_URL=https://api.communitymarketplace.com
WEBSOCKET_URL=wss://ws.communitymarketplace.com
API_TIMEOUT=30000

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdefghijklmnop

# Google Sign-In Configuration
GOOGLE_WEB_CLIENT_ID=your-google-web-client-id.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your-google-ios-client-id.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-google-android-client-id.googleusercontent.com

# Map Configuration (if using maps)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=123456789

# Payment Configuration (if applicable)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Analytics (if applicable)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_DARK_MODE=true
ENABLE_CACHING=true

# Performance Settings
MAX_IMAGE_SIZE=5242880
CACHE_EXPIRATION_HOURS=24
MAX_CACHE_SIZE=104857600
NETWORK_TIMEOUT=30
SHORT_TIMEOUT=10

# Location Settings
MAX_SEARCH_RADIUS=50.0
DEFAULT_LATITUDE=24.7136
DEFAULT_LONGITUDE=46.6753

# Pagination
PRODUCT_LIST_PAGE_SIZE=20
CHAT_MESSAGE_LIMIT=100
